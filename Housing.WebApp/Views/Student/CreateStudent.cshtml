@model Housing.Entities.ViewModels.StudentViewModel
@{
    ViewBag.Title = "Create Student";
}

<h2>Create Student</h2>

@using (Html.BeginForm("CreateStudent", "Student", FormMethod.Post))
{
<div class="form-horizontal">

    <!--START of StudentID form field -->
    <div class="form-group">
        <label for="txtStudentID" class="col-sm-2 control-label">Student ID:</label>
        <div class="col-sm-10">
            <input id="txtStudentID" name="StudentID" type="text" placeholder="9071111111" class="form-control" />
        </div>
    </div>
    <!--END of StudentID form field -->
    <!--START of First Name form field -->
    <div class="form-group">
        <label for="txtFirstName" class="col-sm-2 control-label">First Name:</label>
        <div class="col-sm-10">
            <input id="txtFirstName" name="FirstName" type="text" placeholder="Jane" class="form-control" />
        </div>
    </div>
    <!--END of First Name form field -->
    <!--START of Last Name form field -->
    <div class="form-group">
        <label for="txtLastName" class="col-sm-2 control-label">Last Name:</label>
        <div class="col-sm-10">
            <input id="txtLastName" name="LastName" type="text" placeholder="Doe" class="form-control" />
        </div>
    </div>
    <!--END of Last Name form field -->
    <!--START of Address form field -->
    <div class="form-group">
        <label for="txtAddress" class="col-sm-2 control-label">Permenant Street Address:</label>
        <div class="col-sm-10">
            <input id="txtAddress" name="Address" type="text" placeholder="123 Bucky Way" class="form-control" />
        </div>
    </div>
    <!--END of Address form field -->
    <!--START of Building form field rank??-->
    <div class="form-group">
        <label for="ddAssociate" class="col-sm-2 control-label">Building:</label>
        <div class="col-sm-10">
            <select id="ddAssociate" class="form-control" name="SalesAssociate">
                <option value="">~ Select building ~</option>
                @foreach (var assoc in Model.Building)
                {
                    <option value="@building.Name">@building.Name </option>
                }
            </select>
        </div>
    </div>
    <!--END of Building form field -->
    <!-- START Submit button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2 col-lg-1">
            <button type="submit" class="btn btn-primary">Create Student</button>
        </div>
        <div class="col-md-offset-1 col-md-2 col-lg-1">
            <button type="submit" class="btn btn-default">Cancel</button>
        </div>
    </div>
    <!-- END Submit button-->
</div>
}